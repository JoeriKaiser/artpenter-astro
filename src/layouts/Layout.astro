---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import backgroundIG from '@assets/background.svg'

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  // import screenshot of homepage
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Artpenter"
  : "Artpenter - Léa Stauder - Art Portfolio";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Artpenter is the personal Art Portfolio of Léa Stauder"
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Artpenter - Léa Stauder`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Artpenter Portfolio Preview",
        },
      }}
    />
  </head>
  <body class="overflow-x-hidden">
    <div class="absolute z-0 w-screen">
      <img class="w-screen" src={backgroundIG} alt="background">
    </div>
    
    <section class="relative h-15 z-10">
      <Navbar />
    </section>
    <main class="relative z-10 h-fit">
      <slot />
    </main>
    <!-- <Footer /> -->
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
      @font-face {
        font-family: 'Aloja-Light';
        src: url('fonts/Aloja-Light.woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
