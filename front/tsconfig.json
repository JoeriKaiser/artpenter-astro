{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*", "src/custom.d.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@views/*": ["src/views/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node"
  }
}
