{
  "extends": "astro/tsconfigs/base",
  "include": ["src/*", "src/custom.d.ts"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
