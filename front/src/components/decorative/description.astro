---
import MdxRenderer from "@components/ui/MdxRenderer/MdxRenderer";
const descriptions = await Astro.glob("../../pages/descriptions/*.{md,mdx}");
const { id } = Astro.props;
const content = await descriptions[id].Content();
const text = await content.props.children;
---

<div class="w-full grid justify-center">
  <section class="w-8/12 grid gap-5 md:gap-10 text-center justify-self-center">
    <MdxRenderer client:load mdxText={text} />
  </section>
</div>
