---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import backgroundIG from "@assets/background.svg";
import VerticalNavbar from "@components/navbar/verticalNavbar.astro";
import Background from "@components/decorative/Background/Background";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  // import screenshot of homepage
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Art.penter"
  : "Art.penter - Léa Stauder - Art Portfolio";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <!-- TODO load screenshot of first contentfull paint -->
    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Art.penter is the personal Art Portfolio of Léa Stauder"
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Art.penter - Léa Stauder`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Art.penter Portfolio Preview",
        },
      }}
    />
  </head>
  <body class="absolute background">
    <Background />
    <section class="left-0 h-15 z-50 pt-20 px-10 w-full">
      <Navbar />
    </section>
    <main class="relative">
      <slot />
    </main>
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
      @font-face {
        font-family: "Aloja-Extended";
        src: url("../assets/fonts/Aloja Extended.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
